<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1><%= heading %></h1>
  <% if (todos.length) { %>
  <ul>
    <% todos.forEach(function(t, id) { %>
    <li>
      <%= t.todo %> - <%= t.done ? 'done' : 'not done' %>
      <form action="<%= id %>/?_method=DELETE" class="delete-form" method="POST">
        <button type="submit">DELETE </button>
      </form>
    </li>
    <% }); %>
  </ul>
  <%} else { %>
  <h3>There are no To Dos yet! </h3>
  <% } %>
  <hr>
  <form action="/" method="POST">
    <input type="text" name="todo" placeholder="Add To Do Item">
    <button type="submit"> Add To Do</button>
  </form>
</body>

</html>